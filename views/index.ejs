<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CRUD App</title>
</head>
<body>
  <h1>Items</h1>
    
      
      <table>
        <thead>
          <tr>
            <th>
              Name
            </th>
            <th>
              Description
            </th>
            <th>
              Actions
            </th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
          <tr>
            <td><%=item.name %></td>
            <td> <%= item.description %></td>
            <td>
              <a href="/items/edit/<%= item._id %>">Edit</a>
              <a href="/items/delete/<%= item._id %>">Delete</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
   

  <a href="/items/create">Create New Item</a>
</body>
</html>